<?xml version='1.0' encoding='utf-8'?>
<network-security-config xmlns:tools="http://schemas.android.com/tools">
    <!-- Default policy: HTTPS only; trust both system and user-installed CAs -->
    <!-- Android 7+ does NOT trust user CAs by default; adding src="user" opts in -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"
                tools:ignore="AcceptsUserCertificates" />
        </trust-anchors>
    </base-config>

    <!-- HTTP exceptions: ONLY allow cleartext for specific hosts that truly need it -->
    <!-- DEBUG ONLY <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">192.168.255.37</domain>
    </domain-config>-->
</network-security-config>
